<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <parameters>
        <parameter key="commercetools.cache.cart" type="string">false</parameter>
        <parameter key="commercetools.cache.shipping_method" type="string">false</parameter>
        <parameter key="commercetools.cache.order" type="string">false</parameter>
    </parameters>
    <services>
        <service id="Commercetools\Symfony\CartBundle\Model\Repository\CartRepository" public="true">
            <argument>%commercetools.cache.cart%</argument>
            <argument type="service" id="commercetools.cache" />
            <argument type="service" id="commercetools.client"/>
            <argument type="service" id="commmercetools.mapper.factory" />
            <argument type="service" id="Commercetools\Symfony\CartBundle\Model\Repository\ShippingMethodRepository"/>
        </service>
        <service id="Commercetools\Symfony\CartBundle\Manager\CartManager" public="true">
            <argument id="Commercetools\Symfony\CartBundle\Model\Repository\CartRepository" type="service"/>
            <argument id="event_dispatcher" type="service"/>
        </service>
        <service id="Commercetools\Symfony\CartBundle\Model\Repository\OrderRepository" public="true">
            <argument>%commercetools.cache.order%</argument>
            <argument type="service" id="commercetools.cache" />
            <argument type="service" id="commercetools.client"/>
            <argument type="service" id="commmercetools.mapper.factory" />
        </service>
        <service id="Commercetools\Symfony\CartBundle\Manager\OrderManager" public="true">
            <argument id="Commercetools\Symfony\CartBundle\Model\Repository\OrderRepository" type="service"/>
            <argument id="event_dispatcher" type="service"/>
        </service>
        <service id="Commercetools\Symfony\CartBundle\Model\Repository\ShippingMethodRepository" public="true">
            <argument>%commercetools.cache.shipping_method%</argument>
            <argument type="service" id="commercetools.cache" />
            <argument type="service" id="commercetools.client"/>
            <argument type="service" id="commmercetools.mapper.factory" />
        </service>
        <service id="Commercetools\Symfony\CartBundle\Manager\ShippingMethodManager" public="true">
            <argument id="Commercetools\Symfony\CartBundle\Model\Repository\ShippingMethodRepository" type="service"/>
            <argument id="event_dispatcher" type="service"/>
        </service>
    </services>
</container>
